<div class="container">

  <h2>新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    <div class="field">
      <%= f.text_field :nickname, placeholder: "ニックネーム" %>
    </div>

    <div class="field">
      <%= f.text_field :name, placeholder: "ユーザーID(半角英数字)" %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "パスワード(6文字以上)" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

</div>
