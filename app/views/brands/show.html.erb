<div class="container">
  <h2>ブランド情報</h2>
  <div class="show-brand-container">
    <div class="show-brand-details">
      <div class="show-brand-left">
        <% if @brand.image.blank? %>
          <%= image_tag "default_user_image.png", class: "show-brand-img" %>
        <% else %>
          <%= image_tag @brand.image.url, class: "show-brand-img" %>
        <% end %>
      </div>
      <div class="show-brand-right">
        <div class="show-brand-name"><%= @brand.name %></div>
      </div>
    </div>
    <% if brand_signed_in? && @brand.id == current_brand.id %>
      <div class="show-brand-setting">
        <%= link_to "プロフィールを編集", edit_brand_registration_path(@brand.id), class: "btn2" %>
      </div>
    <% end %>
  </div>

  <h2>商品一覧</h2>
  <%= render partial: "shared/items", locals: { items: @items } %>
</div>