<div class="container">

  <h2 class="form-title">新規登録</h2>
  <div class="form-line"></div>

  <%= form_with model: @brand, url: brand_registration_path, class: "form-wrapper", local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    <div class="form-field">
      <%= f.label :name, "ブランド名", class: "form-label" %><br>
      <%= f.text_field :name, placeholder: "無印良品", class: "form-text-field" %>
    </div>

    <div class="form-field">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br>
      <%= f.text_field :email, placeholder: "mujirushi@example.com", class: "form-text-field" %>
    </div>

    <div class="form-field">
      <%= f.label :password, "パスワード", class: "form-label" %><span class="form-const">半角英数字混合6文字以上</span><br>
      <%= f.text_field :password, type: "password", placeholder: "mujirushi123", class: "form-text-field" %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.text_field :password_confirmation, type: "password", class: "form-text-field", placeholder: "mujirushi123" %>
    </div>

    <div class="form-field">
      <%= f.submit "登録する", class: ["btn", "form-btn"] %>
    </div>
  <% end %>

</div>
