<div class="container">

  <h2 class="form-title">ログイン</h2>
  <div class="form-line"></div>

  <%= form_with model: @brand, url: brand_session_path, class: "form-wrapper", local: true do |f| %>
    <% if flash[:error] || flash[:alert] || flash[:notice] %>
      <ul class="error-messages">
        <%= content_tag(:li, flash[:error], class: "error-message") if flash[:error] %>
        <%= content_tag(:li, flash[:notice], class: "error-message") if flash[:notice] %>
        <%= content_tag(:li, flash[:alert], class: "error-message") if flash[:alert] %>
      </ul>
    <% end %>

    <div class="form-field">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br>
      <%= f.email_field :email, class: "form-text-field", placeholder: "mujirushi@example.com" %>
    </div>

    <div class="form-field">
      <%= f.label :password, "パスワード", class: "form-label" %><span class="form-const">半角英数字混合6文字以上</span><br>
      <%= f.password_field :password, class: "form-text-field", placeholder: "mujirushi123" %>
    </div>

    <div class="form-field">
      <%= f.submit "ログイン", class: ["btn", "form-btn"] %>
    </div>
  <% end %>

  <p class="brand-signup-message">登録がお済みでない方は<%= link_to "こちら", new_brand_registration_path, class:"brand-signup-link" %></p>

</div>