<div class="container">

  <h2 class="form-title">新規登録</h2>
  <div class="form-line"></div>

  <%= form_with model: @user, url: user_registration_path, class: "form-wrapper", local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>
    
    <div class="form-field">
      <%= f.label :nickname, "ニックネーム", class: "form-label" %><br>
      <%= f.text_field :nickname, class: "form-text-field", placeholder: "タロウ" %>
    </div>

    <div class="form-field">
      <%= f.label :username, "ユーザーID", class: "form-label" %><span class="form-const">半角英数字4文字以上</span><br>
      <%= f.text_field :username, class: "form-text-field", placeholder: "taro123" %>
    </div>

    <div class="form-field">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br>
      <%= f.text_field :email, class: "form-text-field", placeholder: "taro@example.com" %>
    </div>

    <div class="form-field">
      <%= f.label :password, "パスワード", class: "form-label" %><span class="form-const">半角英数字混合6文字以上</span><br>
      <%= f.text_field :password, type: "password", class: "form-text-field", placeholder: "taro123" %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, "パスワード(確認)" %><br />
      <%= f.text_field :password_confirmation, type: "password", class: "form-text-field", placeholder: "taro123" %>
    </div>

    <div class="form-field">
      <%= f.submit "登録する", class: ["btn", "form-btn"] %>
    </div>

  <% end %>

</div>
