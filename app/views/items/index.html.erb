<div class="container">
  <h2>商品一覧</h2>
  <ul class="index-items">
    <% @items.each do |item| %>
      <li class="index-item">
        <%= link_to item_path(item.id), class: "index-item-container" do %>
          <%= image_tag item.image.url, class: "index-item-img" %>
          <div class="index-item-right">
            <p class="index-item-brand"><%= item.brand.name %></p>
            <p class="index-item-name"><%= item.name %></p>
            <p class="index-item-avg"><i class="fas fa-star index-avg-star"></i><%= item.avg_score %></p>
            <p class="index-item-price"><%= item.capacity %><%= item.unit.name %> / <%= item.price %>円</p>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
